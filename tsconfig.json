{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "es5",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
    "strict": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@interface/*": [
        "interface/*"
      ],
      "@loaders/*": [
        "loaders/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
}